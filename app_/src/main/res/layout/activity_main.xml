<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/gainsboro"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/main_drawer"
        tools:context=".MainActivity"
        >

    <RelativeLayout
            android:id="@+id/main_drawer_right"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <!--android:layout_marginBottom="@dimen/dp50"-->

        <View
                android:id="@+id/viewbot"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp1"/>


        <com.ittianyu.bottomnavigationviewex.BottomNavigationViewEx
                android:layout_alignParentBottom="true"
                android:id="@+id/bnve"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp60"
                android:background="@color/bnve_bg"
                app:itemIconTint="@color/shape_select_item_image"
                app:itemTextColor="@color/shape_select_item_text"
                app:menu="@menu/menu_navigation_with_view_pager"

                />


        <androidx.viewpager.widget.ViewPager
                android:id="@+id/main_vp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@id/bnve"
                />


        <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab"
                android:layout_width="@dimen/dp60"
                android:layout_height="@dimen/dp60"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/dp26"
                android:src="@drawable/a_false"
                app:backgroundTint="@color/bnve_bg"

                android:background="?android:attr/selectableItemBackground"
                app:borderWidth="@dimen/dp1"
                app:elevation="@dimen/dp9"
                app:rippleColor="@color/yellow"
                />


        <com.as.wanandroid_kotlin.customview.DragFloatButton
                android:id="@+id/ivfloat"
                android:scaleType="fitXY"
                android:clickable="true"
                android:src="@drawable/state_svg_floatbtn"
                android:layout_marginTop="@dimen/dp60"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <!--<android.support.constraint.motion.MotionLayout-->
        <!--android:id="@+id/my_viewpager_head"-->
        <!--android:layout_above="@id/bnve"-->
        <!--app:layoutDescription="@xml/scene_huojian"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent">-->

        <!--<ImageView-->
        <!--android:id="@+id/huojian"-->
        <!--android:src="@drawable/huojian"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"/>-->

        <!--</android.support.constraint.motion.MotionLayout>-->

    </RelativeLayout>


    <include
            android:id="@+id/main_drawer_left"
            layout="@layout/activity_main_drawer"/>

</androidx.drawerlayout.widget.DrawerLayout>