<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutDescription="@xml/guide_scene"
        android:id="@+id/motion"
        >

    <androidx.constraintlayout.utils.widget.ImageFilterView
            android:id="@+id/iv_bg"
            android:scaleType="fitXY"

            app:altSrc="@drawable/night"
            android:src="@drawable/day"

            android:layout_width="match_parent"
            android:layout_height="match_parent"/>


    <androidx.constraintlayout.utils.widget.ImageFilterView
            android:id="@+id/iv_state_start"

            android:src="@drawable/sun"

            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            android:layout_marginTop="@dimen/dp64"
            android:layout_marginRight="@dimen/dp64"

            android:layout_width="@dimen/dp64"
            android:layout_height="@dimen/dp64"/>

    <androidx.constraintlayout.utils.widget.ImageFilterView
            android:id="@+id/iv_state_end"

            android:src="@drawable/moon"

            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            android:layout_marginTop="@dimen/dp64"
            android:layout_marginRight="@dimen/dp64"

            android:layout_width="@dimen/dp64"
            android:layout_height="@dimen/dp64"/>


</androidx.constraintlayout.motion.widget.MotionLayout>