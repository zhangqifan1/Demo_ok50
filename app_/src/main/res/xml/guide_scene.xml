<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
            motion:constraintSetEnd="@+id/end"
            motion:constraintSetStart="@+id/start"
            motion:duration="4000">

        <OnClick
                motion:touchAnchorId="@+id/iv_bg"
                motion:touchAnchorSide="right"/>

        <KeyFrameSet>

            <KeyPosition
                    motion:framePosition="50"
                    motion:keyPositionType="parentRelative"
                    motion:motionTarget="@id/iv_state_start"
                    motion:percentX="0"
                    motion:percentY="0.5"/>

            <KeyPosition
                    motion:framePosition="50"
                    motion:keyPositionType="parentRelative"
                    motion:motionTarget="@id/iv_state_end"
                    motion:percentX="0"
                    motion:percentY="0.5"/>


        </KeyFrameSet>

    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
                android:id="@+id/iv_bg"
                >

            <CustomAttribute
                    motion:attributeName="crossfade"
                    motion:customFloatValue="1"
                    />
        </Constraint>
        <Constraint
                android:id="@+id/iv_state_start"
                >

            <CustomAttribute
                    motion:attributeName="alpha"
                    motion:customFloatValue="0"
                    />
        </Constraint>

        <Constraint
                android:id="@+id/iv_state_end"
                >

            <CustomAttribute
                    motion:attributeName="alpha"
                    motion:customFloatValue="1"
                    />
        </Constraint>


    </ConstraintSet>


    <ConstraintSet android:id="@+id/end">

        <Constraint
                android:id="@+id/iv_bg"
                >

            <CustomAttribute
                    motion:attributeName="crossfade"
                    motion:customFloatValue="0"
                    />

        </Constraint>

        <Constraint
                android:id="@+id/iv_state_start"
                >

            <CustomAttribute
                    motion:attributeName="alpha"
                    motion:customFloatValue="1"
                    />
        </Constraint>

        <Constraint
                android:id="@+id/iv_state_end"
                >

            <CustomAttribute
                    motion:attributeName="alpha"
                    motion:customFloatValue="0"
                    />
        </Constraint>

    </ConstraintSet>

</MotionScene>