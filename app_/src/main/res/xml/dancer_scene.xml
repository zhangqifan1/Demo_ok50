<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
            motion:constraintSetEnd="@+id/end"
            motion:constraintSetStart="@+id/start"
            motion:duration="1000">

        <OnClick
                motion:clickAction="toggle"
                />

        <KeyFrameSet>

            <KeyAttribute
                    android:rotation="720"
                    motion:motionTarget="@id/iv_dancer_left"
                    motion:framePosition="100"/>
            <KeyAttribute
                    android:rotation="720"
                    motion:motionTarget="@id/iv_dancer_right"
                    motion:framePosition="100"/>


            <KeyAttribute
                android:alpha="0.8"
                motion:motionTarget="@id/iv_dancer_center"
                motion:framePosition="50"/>
            <KeyAttribute
                    android:alpha="1"
                    motion:motionTarget="@id/iv_dancer_center"
                    motion:framePosition="100"/>

            <KeyAttribute
                    android:alpha="0.8"
                    motion:motionTarget="@id/view_light_center"
                    motion:framePosition="50"/>
            <KeyAttribute
                    android:alpha="0"
                    motion:motionTarget="@id/view_light_left"
                    motion:framePosition="0"/>
            <KeyAttribute
                    android:alpha="1"
                    motion:motionTarget="@id/view_light_left"
                    motion:framePosition="100"/>

            <KeyAttribute
                    android:alpha="0"
                    motion:motionTarget="@id/view_light_center"
                    motion:framePosition="0"/>
            <KeyAttribute
                    android:alpha="1"
                    motion:motionTarget="@id/view_light_center"
                    motion:framePosition="100"/>

            <KeyAttribute
                    android:alpha="0"
                    motion:motionTarget="@id/view_light_right"
                    motion:framePosition="0"/>
            <KeyAttribute
                    android:alpha="1"
                    motion:motionTarget="@id/view_light_right"
                    motion:framePosition="100"/>


            <KeyAttribute
                    android:scaleX="1.5"
                    android:scaleY="1.5"
                    motion:motionTarget="@id/iv_dancer_center"
                    motion:framePosition="50"/>

            <KeyAttribute
                    android:scaleX="1.5"
                    android:scaleY="1.5"
                    motion:motionTarget="@id/view_light_center"
                    motion:framePosition="50"/>


            <KeyAttribute
                    android:scaleX="0.5"
                    android:scaleY="0.5"
                    motion:motionTarget="@id/view_light_left"
                    motion:framePosition="50"/>

            <KeyAttribute
                    android:scaleX="0.5"
                    android:scaleY="0.5"
                    motion:motionTarget="@id/view_light_right"
                    motion:framePosition="50"/>


        </KeyFrameSet>

    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
                android:id="@+id/iv_dancer_left"
                android:layout_width="@dimen/dp64"
                android:layout_height="@dimen/dp64"

                android:layout_marginStart="@dimen/dp20"
                motion:layout_constraintBottom_toBottomOf="parent"
                motion:layout_constraintStart_toStartOf="parent"
                >

            <CustomAttribute
                    motion:attributeName="warmth"
                    motion:customFloatValue="1"/>
        </Constraint>

        <Constraint
                android:id="@+id/view_light_left"
                android:layout_width="@dimen/dp70"
                android:layout_height="@dimen/dp70"

                android:layout_marginTop="@dimen/dp20"
                android:layout_marginStart="@dimen/dp20"
                motion:layout_constraintTop_toTopOf="parent"
                motion:layout_constraintStart_toStartOf="parent"
                >

            <CustomAttribute
                    motion:attributeName="warmth"
                    motion:customFloatValue="1"/>


        </Constraint>

        <!--///////////////////////////////////////////////-->

        <Constraint
                android:id="@+id/iv_dancer_right"
                android:layout_width="@dimen/dp64"
                android:layout_height="@dimen/dp64"

                android:layout_marginRight="@dimen/dp20"
                motion:layout_constraintBottom_toBottomOf="parent"
                motion:layout_constraintRight_toRightOf="parent"
                >

            <CustomAttribute
                    motion:attributeName="warmth"
                    motion:customFloatValue="0"/>
        </Constraint>

        <Constraint
                android:id="@+id/view_light_right"
                android:layout_width="@dimen/dp70"
                android:layout_height="@dimen/dp70"
                android:layout_marginTop="@dimen/dp20"

                android:layout_marginRight="@dimen/dp20"

                motion:layout_constraintTop_toTopOf="parent"
                motion:layout_constraintRight_toRightOf="parent"
                >

            <CustomAttribute
                    motion:attributeName="warmth"
                    motion:customFloatValue="0"/>


        </Constraint>

        <!--///////////////////////////////////////////////-->

        <Constraint
                android:id="@+id/iv_dancer_center"
                android:layout_width="@dimen/dp64"
                android:layout_height="@dimen/dp64"

                motion:layout_constraintLeft_toLeftOf="parent"
                motion:layout_constraintRight_toRightOf="parent"
                motion:layout_constraintBottom_toBottomOf="parent"
                >

            <CustomAttribute
                    motion:attributeName="warmth"
                    motion:customFloatValue="0.5"/>
        </Constraint>

        <Constraint
                android:id="@+id/view_light_center"
                android:layout_width="@dimen/dp70"
                android:layout_height="@dimen/dp70"
                android:layout_marginTop="@dimen/dp20"

                motion:layout_constraintTop_toTopOf="parent"
                motion:layout_constraintLeft_toLeftOf="parent"
                motion:layout_constraintRight_toRightOf="parent"
                >

            <CustomAttribute
                    motion:attributeName="warmth"
                    motion:customFloatValue="0.5"/>


        </Constraint>


    </ConstraintSet>

    <!--///////////////////////////////////////////////-->

    <ConstraintSet android:id="@+id/end">

        <Constraint
                android:id="@+id/iv_dancer_left"
                android:layout_width="@dimen/dp64"
                android:layout_height="@dimen/dp64"

                android:layout_marginEnd="@dimen/dp20"
                motion:layout_constraintBottom_toBottomOf="parent"
                motion:layout_constraintEnd_toEndOf="parent"

                >
            <CustomAttribute
                    motion:attributeName="warmth"
                    motion:customFloatValue="0"/>

        </Constraint>
        <Constraint
                android:id="@+id/view_light_left"
                android:layout_width="@dimen/dp70"
                android:layout_height="@dimen/dp70"

                android:layout_marginEnd="@dimen/dp20"
                motion:layout_constraintBottom_toBottomOf="parent"
                motion:layout_constraintEnd_toEndOf="parent"
                >

            <CustomAttribute
                    motion:attributeName="warmth"
                    motion:customFloatValue="0"/>

        </Constraint>


        <!--///////////////////////////////////////////////-->
        <Constraint
                android:id="@+id/iv_dancer_right"
                android:layout_width="@dimen/dp64"
                android:layout_height="@dimen/dp64"

                android:layout_marginStart="@dimen/dp20"
                motion:layout_constraintBottom_toBottomOf="parent"
                motion:layout_constraintLeft_toLeftOf="parent"

                >
            <CustomAttribute
                    motion:attributeName="warmth"
                    motion:customFloatValue="1"/>

        </Constraint>
        <Constraint
                android:id="@+id/view_light_right"
                android:layout_width="@dimen/dp70"
                android:layout_height="@dimen/dp70"

                android:layout_marginStart="@dimen/dp20"
                motion:layout_constraintBottom_toBottomOf="parent"
                motion:layout_constraintLeft_toLeftOf="parent"
                >

            <CustomAttribute
                    motion:attributeName="warmth"
                    motion:customFloatValue="1"/>

        </Constraint>


        <!--///////////////////////////////////////////////-->

        <Constraint
                android:id="@+id/iv_dancer_center"
                android:layout_width="@dimen/dp64"
                android:layout_height="@dimen/dp64"

                motion:layout_constraintLeft_toLeftOf="parent"
                motion:layout_constraintRight_toRightOf="parent"
                motion:layout_constraintBottom_toBottomOf="parent"
                >

            <CustomAttribute
                    motion:attributeName="warmth"
                    motion:customFloatValue="0.5"/>
        </Constraint>

        <Constraint
                android:id="@+id/view_light_center"
                android:layout_width="@dimen/dp70"
                android:layout_height="@dimen/dp70"


                motion:layout_constraintBottom_toBottomOf="parent"
                motion:layout_constraintLeft_toLeftOf="parent"
                motion:layout_constraintRight_toRightOf="parent"
                >

            <CustomAttribute
                    motion:attributeName="warmth"
                    motion:customFloatValue="0.5"/>

        </Constraint>

    </ConstraintSet>

</MotionScene>